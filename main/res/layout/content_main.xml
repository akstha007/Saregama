<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ashokkumarshrestha.saregamabasurinotes.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="#eee">

        <Button
            android:id="@+id/btnHindi"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="Hindi"
            android:textSize="20dp"
            android:background="@drawable/instructions"
            android:layout_margin="1dp"/>

        <Button
            android:id="@+id/btnEnglish"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:textSize="20dp"
            android:text="English"
            android:background="@drawable/instructions"
            android:layout_margin="1dp"/>

        <Button
            android:id="@+id/btnNepali"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:textSize="20dp"
            android:text="Nepali"
            android:background="@drawable/instructions"
            android:layout_margin="1dp"/>

        <Button
            android:id="@+id/btnDevotional"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:textSize="20dp"
            android:text="Devotional"
            android:background="@drawable/instructions"
            android:layout_margin="1dp"/>

        <Button
            android:id="@+id/btnPractice"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:textSize="20dp"
            android:text="Practice"
            android:background="@drawable/instructions"
            android:layout_margin="1dp"/>
    </LinearLayout>
</RelativeLayout>
